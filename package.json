    "web3-eth-accounts": "1.0.0-beta.30",
    "web3-providers-ws": "1.0.0-beta.34",
    "web3-utils": "1.0.0-beta.30",
    "winston": "^2.4.4"
  },
  "scripts": {
    "start": "export BROWSER=none PORT=3100 REACT_APP_ENV=development && react-scripts-ts start",
    "start:staging": "export BROWSER=none PORT=3100 REACT_APP_ENV=staging && react-scripts-ts start",
    "start:production": "export BROWSER=none PORT=3100 REACT_APP_ENV=production && react-scripts-ts start",
    "build": "export REACT_APP_ENV=production && react-scripts-ts --max_old_space_size=2048 build",
    "build:staging": "export REACT_APP_ENV=staging && react-scripts-ts --max_old_space_size=2048 build",
    "test": "react-scripts-ts test --env=jsdom",
    "lint": "tslint --project tsconfig.json",
    "lint:fix": "tslint --fix --project tsconfig.json",
    "electron": "electron .",
    "pack": "tsc && electron-builder --dir",
    "dist": "tsc && electron-builder",
    "release": "tsc && electron-builder --mac --win --linux",
    "dist:windows": "tsc && electron-builder --win",
    "dist:linux": "tsc && electron-builder --linux",
    "dist:mac": "tsc && electron-builder --mac",
    "dist:all": "tsc && electron-builder --mac --win --linux",
    "postinstall": "./node_modules/.bin/electron-builder install-app-deps"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js",
      "<rootDir>/src/setupTests.js"
    ],
    "setupTestFrameworkScriptFile": "mock-local-storage",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "ts",
      "tsx",
      "node"
    ]
  },
  "main": "out/electron.js",
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "build": {
    "appId": "bet.decent.DbetWalletMac",
    "productName": "DBET Wallet",
    "files": [
      "**/*",
      "!dist{/*}",
      "!release-builds",
      "!.idea{/*}",
      "!contracts{/*}",
      "!config{/*}",
      "!migrations{/*}",
      "!node_modules{/*}",
      "!public{/*}",
      "!scripts{/*}",
      "!test{/*}",
      "!truffle-config.js"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution",
      "target": [
        "dmg",
        "pkg"
      ],
      "publish": {
        "provider": "github",
        "owner": "decent-bet",
        "repo": "platform-wallet"
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "./public/assets/icons/",
      "target": [
        "AppImage"
      ],
      "category": "Network",
      "publish": {
        "provider": "github",
        "owner": "decent-bet",
        "repo": "platform-wallet"
      }
    },
    "win": {
      "icon": "./public/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": {
        "provider": "github",
        "owner": "decent-bet",
        "repo": "platform-wallet"
      }
    },
    "directories": {
      "buildResources": "public"
    }
  }
}
