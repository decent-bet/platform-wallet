{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
    "plugins": ["react"],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "react/prop-types": 0,
        "comma-dangle": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "no-unused-vars": "warn",
        "no-console": 1,
        "no-undef": 1,
        "no-case-declarations": 1,
        "no-unexpected-multiline": "warn"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.4.2"
        }
    },
    "globals": {
        "setTimeout": true, 
        "clearTimeout": true, 
        "setInterval": true, 
        "clearInterval": true, 
        "window": true,
        "document": true,
        "localStorage": true,
        "jest": true,
        "require": true,
        "global": true,
        "expect": true,
        "it": true,
        "beforeEach": true,
        "process": true,
        "describe": true,
        "console": true,
        "__dirname": true
    }
}
